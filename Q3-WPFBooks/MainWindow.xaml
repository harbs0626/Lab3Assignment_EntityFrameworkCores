<Window x:Class="Q3_WPFBooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q3_WPFBooks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BooksDataGrid" HorizontalAlignment="Left" Height="344" Margin="10,65,0,0" 
                  VerticalAlignment="Top" Width="772"/>
        <Button x:Name="AllTitlesButton" Content="View All Titles" HorizontalAlignment="Left" Margin="10,10,0,0" 
                VerticalAlignment="Top" Width="200" Click="AllTitlesButton_Click" Height="50"/>
        <Button x:Name="AllTitlesByLastNameFirstNameButton" Content="View All Titles by Last Name, First Name" HorizontalAlignment="Left" Margin="215,10,0,0" 
                VerticalAlignment="Top" Width="245" Click="AllTitlesByLastNameFirstNameButton_Click" Height="50"/>
        <Button x:Name="AllAuthorsGroupBy" Content="View All Authors GroupBy" HorizontalAlignment="Left" Margin="465,10,0,0" 
                VerticalAlignment="Top" Width="200" Click="AllAuthorsGroupBy_Click" Height="50"/>

    </Grid>
</Window>
